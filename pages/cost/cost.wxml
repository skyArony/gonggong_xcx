<view class="allpage">
  <view class="top">
    <view class="top-card">
      <view class="top-line">
        <view class="tline-left">校园卡</view>
        <view class="tline-right">{{status}}</view>
      </view>
      <view class="mid-line">
        <view class="mline-money">{{balance}}</view>
        <view class="mline-quancun">待圈存 {{unclaimed}}</view>
      </view>
      <!-- <view class="bottom-line">6217 **** **** ***8 024</view> -->
      <view class="bottom-line2">卡号:{{ecard_id}}</view>
    </view>
  </view>
  <view class="month-record" wx:for="{{dataList}}" wx:for-item="budget">
    <view class="mrecord-header">
      <view class="mrecord-header-left" wx:if="{{index == 0}}">本月</view>
      <view class="mrecord-header-left" wx:else>{{item.budget.month}}</view>
      <view class="mrecord-header-right">充值 {{budget['budget']}} | 支出 {{item.budget.expense}}</view>
    </view>
  </view>
