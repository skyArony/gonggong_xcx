/* library.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}

.fixedView {
  position: fixed;
  z-index: 2;
  width: 100%;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  background-color: #3e8fde;
  border-bottom: 2rpx solid #3e8fde;
}

.tab-item {
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #8bbceb;
}

.on {
  color: #fff;
  border-bottom: 7rpx solid #fff;
}

swiper {
  padding-top: 97rpx;
  min-height: 92%;
}

.header {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx;
  color: #525252;
  margin-bottom: 30rpx;
  border-bottom: solid 1rpx #e6e6e6;
}

.left {
  display: flex;
  align-items: baseline;
  font-size: 35rpx;
}

.big {
  font-size: 60rpx;
  font-weight: 650;
}

.right {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.top {
  text-align: right;
  margin-bottom: 10rpx;
}

.item {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: solid 1rpx #e6e6e6;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #e6e6e6;
}

.book {
  color: #464646;
  padding-bottom: 10rpx;
  font-size: 32rpx;
  font-weight: 675;
}

.time {
  font-size: 26rpx;
  color: #6f6f6f;
}

.tip {
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #a8a8a8;
}

.input{
  width: 75%;
}
.input input {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 4rpx;
  font-size: 30rpx;
  caret-color: red;
}

.button  {
  width: 22%;
}
.button button {
  background-color: #63ba63;
  font-size: 30rpx;
}

.searchForm {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

scroll-view {
  display: inline;
}

.res-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: white;
  border-bottom: #cdcdcd solid 1rpx;
}

.item-info {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #757575;
}

.item-title {
  font-size: 32rpx;
  font-weight: 650;
  color: #525252;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.author {
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.publisher {
  max-width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.query {
  position: fixed;
  width: 100%;
  background-color: #f5f5f5;
  height: 130rpx;
}

.result {
  padding-top: 130rpx;
  height: 89%;
}

.swiper-search {
  display: flex;
}

.getDetail {
  color: #9a9a9a;
  font-size: 28rpx;
  padding-top: 10rpx;
}

.detail-res {
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  color: #919191;
  font-size: 25rpx;
}

.detail-line {
  background-color: #eaeaea;
  height: 2rpx;
  margin-top: 10rpx;
}

.list {
  display: flex;
  justify-content: space-between;
  color: #787878;
  font-size: 27rpx;
  padding-top: 15rpx;
}

.book-id {
  padding-bottom: 5rpx;
}

.verticalCenter {
  display: flex;
  align-items: center
}