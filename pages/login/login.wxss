/* login.wxss */
page{
  height: 100%;
}

.top{
  height: 15%;
  background-color: #3e8fde;
}

.down{
  height: 73.5%;
  background-color: #f5f5f5;
  padding: 140rpx 60rpx 0 60rpx;
  display: flex;
  flex-direction: column;
}

#logo{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 5%;
  left: 50%;
  margin-left: -90rpx;
}

.line{
  height: 1px;
  background-color: #e2e2e2;
  margin: 0rpx 20rpx 0rpx 20rpx;
}

.input{
  width: 100%;
  background-color: #fff;
  border-radius: 8rpx;
}

.input input{
  padding: 27rpx 22rpx;
  font-size: 30rpx;
}

button{
  margin-top: 80rpx;
  background-color: #63ba63;
  color: #fff;
}

.button-hover{
  background-color: #5dae5d;
  color: #fff;
}

.radio {
  color: #757575;
  font-size: 30rpx;
  padding-top: 35rpx;
}

.tip{
  margin: 70rpx 40rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 38rpx;
  color: #757575;
  text-decoration: underline;
}