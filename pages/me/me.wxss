/* me.wxss */
page{
    height:100%;
    background-color:#ededed;
}
.allpage{
    display: flex;
    flex-direction: column;
}
.top{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #3e8fde;
}
.back{
    width: 100%;
    position: absolute;
    z-index: 1;
}
.mygg{
    color: #fff;
    font-size: 33rpx;
    padding: 20rpx;
    z-index: 1;
}
.headimg{
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin: 20rpx;
    z-index: 2;
}
.username{
    color: #fff;
    font-size: 35rpx;   
    padding: 10rpx 0 0 0;
    z-index: 1;
}
.userid{
    color: #fff;
    font-size: 23rpx;
    padding-bottom: 40rpx ;
    z-index: 1;
}

.mid{
    background-color: #fff;
    z-index: 1;
    margin-bottom: 10rpx;
}
.outer{
    padding: 25rpx 20rpx 0 20rpx;
    display: flex;
    flex-direction: column;
}
.title{
    padding: 0 20rpx 25rpx 20rpx;
    color: #525252;
    font-size: 32rpx;
}
.line{
    height: 4rpx;
    width: 100%;
    background-color: #e9e9e9;
    align-self:flex-end;
}
.line-in{
    height: 1px;
    width: 100%;
    background-color: #e2e2e2;
    align-self:flex-end;
}
.content{
    padding: 15rpx 20rpx 20rpx;
}
.set-item{
    padding: 25rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #757575;
}
.set-item0{
    padding: 12rpx 0 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #757575;
}

.bottom{
    background-color: #fff;
    z-index: 1;
    margin-bottom: 20rpx;
}